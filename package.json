{
  "name": "satturn",
  "version": "0.2.4",
  "description": "A file editor with support for markdown and json",
  "main": "index.js",
  "scripts": {
    "start": "ROOT=./test-data/files/ PORT=8001 APPROOT=./ bash -c './api/api'",
    "develop": "npm run watch & npm run start",
    "watch": "npm run scss:watch & npm run watchify",
    "watchify": "watchify -o dist/bundle.js src/index.js -dv",
    "build": "npm run api:build & npm run api:build:linux & npm run scss -- --output-style compressed & browserify src/index.js | uglifyjs > dist/bundle.js",
    "scss": "node-sass src/styles/bundle.scss -o dist/",
    "scss:watch": "npm run scss & npm run scss -- -rw src/styles/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "api:build": "go build -o ./api/api ./api",
    "api:build:linux": "env GOOS=linux GOARCH=386 go build -o ./api/api-linux ./api",
    "version": "npm run build && git add .",
    "postversion": "git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oreillymedia/satturn.git"
  },
  "keywords": [
    "markdown",
    "json",
    "filetree"
  ],
  "author": "Martin Bravo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oreillymedia/satturn/issues"
  },
  "homepage": "https://github.com/oreillymedia/satturn#readme",
  "dependencies": {
    "@oreillymedia/annotator": "~0.1.1",
    "classnames": "^2.2.5",
    "draft-js": "^0.9.1",
    "draft-js-export-html": "^0.5.0",
    "draft-js-import-html": "^0.3.0",
    "history": "^4.3.0",
    "immutable": "^3.8.1",
    "immutable-tree": "^0.2.0",
    "immutable-treeutils": "^0.1.5",
    "lodash.throttle": "^4.1.1",
    "markdown-it": "^8.2.2",
    "markdown-it-container": "^2.0.0",
    "react": "^15.4.1",
    "react-autosize-textarea": "^0.3.3",
    "react-dom": "^15.3.2",
    "react-json": "^0.2.1",
    "react-md-editor": "^0.2.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.1",
    "react-treeview": "^0.4.6",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "dir-to-json": "0.0.3",
    "node-sass": "^3.10.1",
    "reactify": "^1.1.1",
    "uglify-js": "^2.7.4",
    "watchify": "^3.7.0"
  }
}
